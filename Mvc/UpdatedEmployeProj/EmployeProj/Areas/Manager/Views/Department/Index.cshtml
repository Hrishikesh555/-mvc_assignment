@model List<EmployeProj.Models.Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayoutPage1.cshtml";
}


<link href="~/Content/font-awesome.css" rel="stylesheet" />

<h2>Index</h2>

<table class="table table-striped table-dark mt-3">

    <tr>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/department/index?SortColumn=DepartmentId&IconClass=fa-sort-asc&Page=@ViewBag.Page">Department Id</a>
                if (ViewBag.SortColumn == "DepartmentId")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/department/index?SortColumn=DepartmentId&IconClass=fa-sort-desc&Page=@ViewBag.Page">Department Id</a>
                if (ViewBag.SortColumn == "DepartmentId")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }

        </th>
        <th>Department Name</th>
        <th>Department Location</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr id="row_@item.DepartmentId">
            <td>@item.DepartmentId</td>
            <td>@item.DepartmentName</td>
            <td>@item.DepartmentLoc</td>
            <td></td>
        </tr>

    }

</table>


        @{
            int PrevPageNo = ViewBag.Page - 1;
            if (PrevPageNo <= 0)
            {
                PrevPageNo = 1;
            }

            int NextPageNo = ViewBag.Page + 1;
            if (NextPageNo > ViewBag.NoOfPages)
            {
                NextPageNo = ViewBag.NoOfPages;
            }
        }
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="/Manager/Department/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@PrevPageNo">Prev</a>
            </li>
            @for (int i = 0; i < ViewBag.NoOfPages; i++)
            {
                if ((i + 1) == ViewBag.Page)
                {
                    <li class="page-item active">
                        <a class="page-link" href="/Manager/Department/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@(i + 1)">@( i + 1)</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="/Department/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@(i + 1)">@( i + 1)</a>
                    </li>
                }
            }
            <li class="page-item">
                <a class="page-link" href="/Manager/Department/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@NextPageNo">Next</a>
            </li>
        </ul>



