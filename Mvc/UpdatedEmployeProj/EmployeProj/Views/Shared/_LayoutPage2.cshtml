<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>

</head>
<body style="background-image: url(/Image/photo-1486406146926-c627a92ad1ab.jpg); background-repeat: no-repeat; background-size: cover;background-position:center;overflow:hidden;height:90vh">


    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <a class="navbar-brand" href="#">Company</a>
        <div class="col-md-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/index">Home</a>
                </li>
                @if (User.Identity.IsAuthenticated == true)
                {

                    <li class="nav-item">
                        @if (User.Identity.Name == "admin")
                        {
                        <a class="nav-link" href="/Admin/Department/index">Department</a>
                        }
                else
                {
                    <a class="nav-link" href="/Manager/Department/index">Department</a>
                }
                    </li>
                    <li class="nav-item">
                    @if(User.Identity.Name=="admin")
                {
                        <a class="nav-link" href="/Admin/Employe/Index">Employe</a>
                    }
                    else
                {
                    <a class="nav-link" href="/Manager/Employe/Index">Employe</a>
                }

                    </li>
                }
                @if (User.Identity.IsAuthenticated == false)
                {
                    <li class="nav-item"><a class="nav-link" href="/account/login">Login</a></li>
                }
                @if (User.Identity.IsAuthenticated == true)
                {
                    <li class="nav-item"><a class="nav-link" href="/account/logout">Logout</a></li>
                }

            </ul>
        </div>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="text-white">
                Welcome,@User.Identity.Name
            </div>
        }
        <div class="col-3 text-white">
            @ViewBag.Message
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>


</body>
</html>
