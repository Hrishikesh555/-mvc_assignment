@model EntityDBFIRST.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products Details</h2>
<table class="table">
    <tr>
        <th>ProductID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>DateofPurchase</th>
        <td>
        @if(Model.DateofPurchase.HasValue)
            {
            <span>@Model.DateofPurchase.Value.ToString("d/M/yyyy")</span>
            }
        </td>
    </tr>
    <tr>
        <th>AvailabilityStatus</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>CategoryID</th>
        <td>
        @if(Model.Category!=null)
            {
            <span>@Model.Category.CategoryName</span>
            }
        </td>
    </tr>
    <tr>
        <th>BrandID</th>
        <td>
        @if(Model.Brand!=null)
            {
            <span>@Model.BrandID</span>
            }
        </td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
    <a href="/products/index">Back to Products</a>



</table>

