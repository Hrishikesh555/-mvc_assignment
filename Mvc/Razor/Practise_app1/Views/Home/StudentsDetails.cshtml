
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Products">Product</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Contact">Contact</a>
            </li>
        </ul>
    </nav>
    @{ 
        string Studentresult;
        if(ViewBag.Mark >=35)
        {
            Studentresult = "Pass";
        }
        else
        {
            Studentresult = "Fail";
        }
    }
    <div class="container-fluid">
        <table class="table">
            <tr>
                <td> Student Id</td>
                <td>@ViewBag.StudentId</td>
            </tr>
            <tr>
                <td>Students name</td>
                <td>@ViewBag.StudentName</td>

            </tr>
            <tr>
                <td>Students marks</td>

                <td>@ViewBag.Mark</td>
            </tr>
            <tr>
                <td>Result</td>
                <td>@Studentresult</td>
            </tr>
            <tr>
                <td colspan="2">
                    @if(Studentresult== "Pass")
                    {
                        <span class="text-success">Congratulation</span>
                    }
            else
            {
                <span class="text-danger">Better Luck next time</span>
            }
                </td>
            </tr>

            <tr>
                <td>Semester</td>
                <td>
                    @for(int i=0;i<= ViewBag.NoofSem; i++)
                    {
                        <span>@i</span>
                    }
                </td>
            </tr>
            <td>
                <ul>
                    @for (int i = 0; i <= ViewBag.NoofSem; i++)
                    {
                        <li> @i</li>
                        }
                            </ul>
            </td>
               <tr>
                <td>Subject</td>
                <td>
                    <ul>
                        @foreach (var subject in ViewBag.Subject)
                        {
                            <li>@subject</li>
                        }
                    </ul>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
