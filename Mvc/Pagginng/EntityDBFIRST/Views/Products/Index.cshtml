@model List<EntityDBFIRST.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>
<form class="form-inline" action="/Products/Index">
    <label for="search">Search</label>
    <input type="search" class="form-control" id="search" name="search" placeholder="search" value="@ViewBag.search" />
    <button type="submit" class="btn btn-primary">Go</button>
    <div> <a href="/products/Create/">Create</a></div>
</form>
<table class="table">
   
        
    <tr>
        <th style="width:15%">
            photo
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=ProductID&IconClass=fa-sort-asc&Page=1">Product ID</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=ProductID&IconClass=fa-sort-desc&Page=1">Product ID</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:20%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=ProducName&IconClass=fa-sort-asc&Page=1">Product Name</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=ProductName&IconClass=fa-sort-desc&Page=1">Product Name</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=Price&IconClass=fa-sort-asc&Page=1">Price</a>
                if (ViewBag.SortColumn == "Price")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
        <a href="/products/index?SortColumn=Price&IconClass=fa-sort-desc&Page=1">Price</a>
                if (ViewBag.SortColumn == "Price")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
            <a href="/products/index?SortColumn=DateofPurchase&IconClass=fa-sort-asc&Page=1">DateofPurchase</a>
                if (ViewBag.SortColumn == "DateofPurchase")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
        <a href="/products/index?SortColumn=DateofPurchase&IconClass=fa-sort-desc&Page=1">DateofPurchase</a>
                if (ViewBag.SortColumn == "DateofPurchase")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }

            
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
            <a href="/products/index?SortColumn=AvailabilityStatus&IconClass=fa-sort-asc&Page=1">AvailabilityStatus</a>
                if (ViewBag.SortColumn == "AvailabilityStatus")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
        <a href="/products/index?SortColumn=AvailabilityStatus&IconClass=fa-sort-desc&Page=1">AvailabilityStatus</a>
                if (ViewBag.SortColumn == "AvailabilityStatus")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
