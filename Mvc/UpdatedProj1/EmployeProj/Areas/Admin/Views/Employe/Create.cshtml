@model EmployeProj.Models.Empploye

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h2>Create</h2>
<form action="/Admin/Employe/Create" method="post"  enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.EmployeName)
            @Html.TextBoxFor(temp => temp.EmployeName, new { Placeholder = "EmployeName", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.EmployeName)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.Designation)
            @Html.TextBoxFor(temp => temp.Designation, new { placeholder = "Designation", @class = "form-control" })

            @Html.ValidationMessageFor(temp => temp.Designation)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="DateOfJoing">DateOfJoing</label>
            <input type="date" class="form-control" id="DateOfJoing" name="DateOfJoing" placeholder="DateOfJoing" />
            @Html.ValidationMessageFor(temp => temp.DateOfJoing)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.City)
            @Html.TextBoxFor(temp => temp.City, new { placeholder = "City", @class = "form-control" })

            @Html.ValidationMessageFor(temp => temp.City)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.Contact)
            @Html.TextBoxFor(temp => temp.Contact, new { placeholder = "Contact", @class = "form-control" })

            @Html.ValidationMessageFor(temp => temp.Contact)
        </div>
        <div class="form-group col-md-6">
            <label class="form-label">Deparment Name</label>
            <select class="form-control" name="DepartmentId">

                <option value="">Please select</option>
                @foreach (var Dept in ViewBag.departmen)
                {
                    <option value="@Dept.DepartmentId">@Dept.DepartmentName</option>
                }

            </select>
            @Html.ValidationMessageFor(temp=>temp.DepartmentId)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.Status, new { @class = "form-check-label" })
            @Html.DropDownListFor(temp => temp.Status, new List<SelectListItem>(){
            new SelectListItem() { Text = "Permanant", Value = "Permanant" },
            new SelectListItem() { Text = "Traine", Value = "Traine" }
            }, "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Status)
        </div>
        <div class="form-group col-md-6">
            <label for="Profile">Image</label>
            <input type="file" name="Profile" id="Profile" class="form-control" />
        </div>
    </div>          
            <button type="submit" class="btn btn-success">Create</button>
            <a class="btn btn-danger" href="/Admin/Employe/index">Cancel</a>
</form>
