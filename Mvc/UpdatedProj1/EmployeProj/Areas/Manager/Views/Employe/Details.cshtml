@model EmployeProj.Models.Empploye
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayoutPage1.cshtml";
}


<div class="card" style="width:450px; margin-left:280px;margin-top:30px">
    <img class="card-img-top" src="data:image;base64,@Model.Profile" style="border-radius:150%;width:300px;height:300px;margin-left:75px;margin-top:5px" >
    <div class="card-body">
        <table>

            <tr>
                <th>EmployeName-</th>
                <td>@Model.EmployeName</td>
            </tr>
            <tr>
                <th>Designation-</th>
                <td>@Model.Designation</td>
            </tr>
            <tr>
                <th>DateOfJoing-</th>
                <td>@Model.DateOfJoing</td>
            </tr>
            <tr>
                <th>City-</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Contact-</th>
                <td>@Model.Contact</td>
            </tr>
            <tr>
                <th>DepartmentName-</th>
                <td>
                    @if (Model.Department != null)
                    {
                        @Model.Department.DepartmentName
                    }
                </td>
            </tr>
        </table>
        <a class="btn btn-dark" href="/Manager/Employe/index" style="margin-left:360px;margin-top:10px">Back</a>
    </div>
</div>

